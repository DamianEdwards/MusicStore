@model MvcMusicStore.Models.Album

<div ng-controller="MusicStore.Admin.Catalog.AlbumListController as viewModel">
    <h2>Albums</h2>
    <p>
        <a class="btn btn-default" href="#/admin/albums/new">Create new</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Genre)</th>
                <th>@Html.DisplayNameFor(m => m.Artist)</th>
                <th>@Html.DisplayNameFor(m => m.Title)</th>
                <th>@Html.DisplayNameFor(m => m.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="album in viewModel.albums">
                <td>
                    {{ album.Genre.Name }}
                </td>
                <td>
                    {{ viewModel.truncate(album.Artist.Name, 25) }}
                </td>
                <td>
                    {{ viewModel.truncate(album.Title, 25) }}
                </td>
                <td>
                    {{ album.Price | currency }}
                </td>
                <td>
                    <div class="btn-group btn-group-xs">
                        <a ng-href="#/albums/{{ album.AlbumId }}/details" class="btn btn-default">Details</a>
                        <a ng-href="#/albums/{{ album.AlbumId }}/edit" class="btn btn-default">Edit</a>
                        <a ng-href="#/albums/{{ album.AlbumId }}/delete" class="btn btn-default">Delete</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <pagination class="pagination-sm" on-select-page="viewModel.loadPage(page)"
                page="viewModel.currentPage" items-per-page="viewModel.pageSize"
                total-items="viewModel.totalCount" max-size="15"
                rotate="false" boundary-links="true"></pagination>
    <p>
        {{ viewModel.totalCount }} total albums
    </p>
</div>